<article ng-app="studies" ng-controller="StudySearchController">
	<header>
	<h1 class = "h2"> Study Search </h1>
	</header>
	<section class = "search-form">
		<form>
			
				<label for="search.keywords" class="sr-only"> Keywords
				</label>
				<input type="text"
						name="keywords"
						class="form-control input-lg"
						placeholder="Search by Study name or CRC name"
						ng-change="search(keywords)"
						ng-model="keywords">		
					
	 		
		</form>
		<h1 class = "searchedFor" ng-if="searchedFor">
		<small>Searched for:</small> {{searchedFor}}
		</h1>
	</section>
	<section class = "search-results">
		<header>
			<h1 class = "h3">Results</h1>
		</header>
		<ol class ="list-group">
				<li class = "list-group-item clearfix" ng-repeat="study in studies">
				<h3 class ="pull-right"> <small class= "text-uppercase">CRC: {{study.crc}}</small></h3>
				<h2 class="h3"> {{study.study_name}}<small> Pro000{{study.protocol}}</small></h2>
				<h4><small>Enrollment: {{study.enrollment}} Target: {{study.target}} </small></h4>
				</li>
			
		</ol>

	</section>
</article>