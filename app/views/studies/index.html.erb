<header>
<h1 class = "h2"> Study Search </h1>
</header>
<section class = search-form>
	<%= form_for :studies, method: :get do |f| %>
		<div class = "input-group input-group-lg">
			<%= label_tag :keywords, nil, class: "sr-only" %>
			<%= text_field_tag :keywords, nil, placeholder: "Study Name, Primary Investigator, or CRC", class: "form-control input-lg" %>
			<span class = "input-group-btn">
				<%= submit_tag "Find Study", class: "btn btn-primary btn-lg" %>
			</span>
 		</div>
	<% end %>
</section>
<section class = "search-results">
	<header>
		<h1 class = "h3">Results</h1>
	</header>
	<ol class ="list-group">
		<% @studies.each do |study| %>
			<li class = "list-group-item clearfix">
			<h3 class ="pull-right"> <small class= "text-uppercase">CRC: <%= study.crc %></small></h3>
			<h2 class="h3"><%= study.study_name %><small> protocol #000<%= study.protocol %></small></h2>
			<h4><small>Enrollment: <%= study.enrollment %> Target: <%=study.target %></small></h4>
			</li>
		<% end %>
	</ol>

</section>